<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <!-- 无背景 -->
    <style name="NoBgDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 白色背景 -->
    <style name="StyleWhiteGround">
        <item name="android:background">#f0f0f0</item>
    </style>

    <style name="NoTitleBarFullscreen">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 用于标题操作栏的文字样式 -->
    <style name="Caption_TextView">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <!-- 黑色背景框 -->
    <style name="layout_background">
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/shape_top_line</item>
    </style>

    <!-- 黑色背景框  无圆角 -->
    <style name="layout_background_no_conner">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/shape_outline_no_coner</item>
    </style>
    <!-- checkbox -->
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_selector</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- 登录按钮 -->
    <style name="loginbtn_redbg_white22">
        <item name="android:textSize">22.0sp</item>
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="red_num_check_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@drawable/textview_red_number_fun </item>
    </style>

    <style name="blue_num_check_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@drawable/textview_blue_number_fun </item>
    </style>

    <!-- 圆角框 左右padding5dp 黑色 14 -->
    <style name="input_number_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_top_line</item>
    </style>

